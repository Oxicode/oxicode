{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false
  },
  "extends": [
    "eslint:recommended",
    "standard",
    "next/core-web-vitals"
  ],
  "rules": {
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error",
    "indent": [
      "error",
      2
    ]
  },
  "plugins": [
    "simple-import-sort"
  ]
}
